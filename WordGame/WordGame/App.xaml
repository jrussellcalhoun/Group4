<Application x:Class="WordGame.WordGameApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordGame"
             xmlns:tools="clr-namespace:WordGame.Tools"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary x:Key="ResourceDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/StaticResourceDictionary.xaml"/>
                <ResourceDictionary Source="Resources/ButtonsResourceDictionary.xaml"/>
                <ResourceDictionary Source="Resources/TextBoxesResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
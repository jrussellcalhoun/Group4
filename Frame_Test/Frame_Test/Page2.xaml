<Page x:Class="Frame_Test.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frame_Test"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="Page2">

    <Grid Background="Black">
        <TextBox x:Name="game_info" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="262" Width="674" Background="#FFB9FBC0" FontSize="36"/>
        <Button x:Name="new_game_button" Content="Play again?" HorizontalAlignment="Center" Margin="0,721,0,0" VerticalAlignment="Top" Height="97" Width="452" Background="#FF8EECF5" FontWeight="Bold" FontSize="36" Click="new_game_button_Click"/>
        <TextBox x:Name="win_or_lose_box" HorizontalAlignment="Center" Margin="0,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" Height="105" Background="#FFCFBAF0" FontSize="48" TextAlignment="Center"/>
    </Grid>
</Page>

                 RenderTransformOrigin="-0.217,-1.187" Height="69" FontSize="36" 
                 TextAlignment="Center" Grid.ColumnSpan="4" Grid.Column="2" MaxLength="5" />
        <TextBox x:Name="Guess_Box" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" 
                 VerticalAlignment="Center" Width="202" Height="254" Grid.RowSpan="3" BorderThickness="3,3,3,3" 
                 Text="Guesses:" FontSize="18"/>
        <TextBlock x:Name="Guess_Button" Grid.Column="6" HorizontalAlignment="Center" Grid.Row="7" Text="Enter" TextWrapping="Wrap" 
                   VerticalAlignment="Center" Height="37" Width="45" Background="#FF2BD918" FontWeight="Bold" TextAlignment="Center" 
                   MouseDown="Guess_Button_MouseDown"/>

    </Grid>
